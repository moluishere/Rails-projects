
<div data-controller="theme-image">
  <div ><img class="object-cover w-full h-24" src=""></div>
  <form>
   <input data-action="change -> theme-image#update" type="file" name="image" />
  </form>
</div>

<h1 class="font-bold text-2xl">Task Manager</h1>

<div class="mt-4">
  <%= render "form", task: @task %>
  <%# <%= render partial: "form", locals: {task: @task} %> 
</div>


<div id="tasks">
  <h1 class="font-bold text-lg mb-7">Tasks</h1>

  <div class="px-5" data-controller="tasks">
    <%= render @tasks %>
    <%#= render partial: "task", collection: @task%>
  </div>
 </div>

<div data-controller="background-color">
  <select data-action="change -> background-color#change" class="my-5">
    <option >選擇字體</option>
    <option value="font-serif" class="font-serif">font-serif</option>
    <option value="font-mono" class="font-mono">font-mono</option>
    <option value="font-sans" class="font-sans">font-sans(default)</option>
  </select>
 </div>